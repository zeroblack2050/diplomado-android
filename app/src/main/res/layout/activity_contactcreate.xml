<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context="com.cosmo.arquitecturamvpbase.views.taller.ContactActivity">

    <EditText
        android:id="@+id/contact_name_edittex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nombre"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"/>

    <EditText
        android:id="@+id/contact_username_edittex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Usernombre"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"/>

    <EditText
        android:id="@+id/contact_description_edittex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Descripción"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"/>

    <EditText
        android:id="@+id/contact_number_edittex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Número"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"/>

    <EditText
        android:id="@+id/contact_type_edittex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Tipo"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"/>

    <EditText
        android:id="@+id/contact_cordinates_edittex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Número"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">
    </LinearLayout>

    <Button
        android:id="@+id/contact_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear contacto"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorPrimaryDark"/>

</LinearLayout>
